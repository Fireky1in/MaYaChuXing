<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/xui_config_color_white"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y400"
            android:background="@mipmap/bg_adopt"
            android:orientation="vertical">

            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                android:id="@+id/tv_adopt_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y130"
                android:layout_marginEnd="@dimen/x30"
                android:backgroundTint="@color/transparent"
                app:sCenterTextColor="@color/white"
                app:sCenterTextSize="18sp"
                app:sCenterViewGravity="right_center"
                app:sRightTextColor="@color/white"
                app:sRightTextIsBold="true"
                app:sRightTextSize="22sp"
                app:sUseShape="true" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_adopt_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/x50"
                android:textColor="@color/white" />

            <!--<com.xuexiang.xui.widget.textview.supertextview.SuperButton-->
            <!--style="@style/SuperButton.Gray"-->
            <!--android:layout_width="@dimen/x150"-->
            <!--android:layout_height="@dimen/y80"-->
            <!--android:layout_gravity="end"-->
            <!--android:layout_marginTop="@dimen/y100"-->
            <!--android:layout_marginEnd="@dimen/x50"-->
            <!--android:text="已抢完"-->
            <!--android:textColor="@color/white" />-->

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_adopt_item_type"
                android:layout_width="@dimen/x150"
                android:layout_height="@dimen/y80"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/y100"
                android:layout_marginEnd="@dimen/x50"
                android:background="@drawable/bg_rectangle_gray"
                android:gravity="center"
                android:textColor="@color/white" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_adopt_activity_type"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y120"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/x50"
            android:textColor="@color/tx_bottom_navigation"
            android:textSize="16sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
