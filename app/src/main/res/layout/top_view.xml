<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y100"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <!--返回-->
    <LinearLayout
        android:id="@+id/ll_top_back"
        android:layout_width="@dimen/x400"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/x60"
        android:gravity="start|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_top_back"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y80"
            android:padding="3dp"
            app:srcCompat="@drawable/ic_back" />
    </LinearLayout>

    <!--我的-->
    <LinearLayout
        android:id="@+id/ll_top_my"
        android:layout_width="@dimen/x400"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/x60"
        android:gravity="start|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_top_my"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y80"
            app:srcCompat="@drawable/ic_my" />
    </LinearLayout>

    <!--标题-->
    <TextView
        android:id="@+id/tv_top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:layout_marginBottom="@dimen/y20"
        android:letterSpacing="0.13"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--取消-->
    <Button
        android:id="@+id/bt_top_cancel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/x30"
        android:background="@null"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/tx_bottom_navigation"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--我的领养-->
    <Button
        android:id="@+id/bt_top_adoption"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/x30"
        android:background="@null"
        android:gravity="center"
        android:text="我的领养"
        android:textColor="@color/tx_bottom_navigation"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--银行卡-->
    <Button
        android:id="@+id/bt_top_bank"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/x30"
        android:background="@null"
        android:gravity="center"
        android:text="银行卡"
        android:textColor="@color/tx_bottom_navigation"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--分享-->
    <ImageButton
        android:id="@+id/ib_top_share"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/y80"
        android:layout_marginEnd="@dimen/x30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_share" />
</androidx.constraintlayout.widget.ConstraintLayout>